#Basic binds
super + Return
	$TERMINAL
super + d
	dmenu_run
super + shift + s
	slock &  mpc pause ; pauseallmpv ; xset dpms force off
super + w
    $BROWSER

#Nettverk
super + shift + F1
    $TERMINAL -e internett
super + shift + F2
	$TERMINAL -e exvpn
super + shift + F3
	$TERMINAL -e ping5
super + shift + F12
	mailsync

#Terminal software
super + u
	$TERMINAL -e vu
super + shift + u
	$TERMINAL -e sudo iftop
super + i
    $TERMINAL -e gotop
super + shift + i
	$TERMINAL -e htop
super + o
    $TERMINAL -e calcurse -D ~/.config/calcurse
super + shift + o
 	$TERMINAL -e newsboat
super + p
	$TERMINAL -e neomutt
super + shift p
	$TERMINAL -e nvim

# Software
super + e
	bless
super + shift + e
	audacity
super + r
	qbittorrent
super + shift + r
    pd
super + shift + F11
	protonmail-bridge

#Misc
super + control + shift + u
	xinput disable 'SynPS/2 Synaptics TouchPad'
super + control + shift + i
	xinput enable 'SynPS/2 Synaptics TouchPad'

#Music
super + z
	mpc pause
super + shift + z
	mpc play
super + x
	mpc next
super + shift + x
	mpc prev
super + a
    $TERMINAL -e ncmpcpp
super + shift + a
	$TERMINAL -e pulsemixer
super + s
	$TERMINAL -e spotify-tui

#XF86
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15
