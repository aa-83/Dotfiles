#Basic binds
super + Return
	$TERMINAL
super + d
	dmenu_run
super + shift + s
	slock &  mpc pause ; pauseallmpv
super + w
    $BROWSER

#Nettverk
super + shift + F1
    $TERMINAL -e internett
super + shift + F2
	$TERMINAL -e exvpn
super + shift + F3
	$TERMINAL -e ping5
super + shift + F12
	mailcheck

#Terminal software
super + u
	$TERMINAL -e vufm
super + shift + u
	$TERMINAL -e pcmanfm
super + i
    $TERMINAL -e gotop
super + shift + i
	$TERMINAL -e htop
super + o
    $TERMINAL -e calcurse -D ~/.config/calcurse
super + shift + o
 	$TERMINAL -e newsboat
super + p
	$TERMINAL -e neomutt
super + shift p
	passmenu

# Software
super + e
	bless
super + shift + e
	audacity
super + r
	qbittorrent
super + shift + r
    pd

#Misc
super + control + shift + u
	xinput disable 'SynPS/2 Synaptics TouchPad'
super + control + shift + i
	xinput enable 'SynPS/2 Synaptics TouchPad'

#Music
super + x
	mpc pause
super + shift + x
	mpc play
super + z
	mpc next
super + shift + z
	mpc prev
super + a
    $TERMINAL -e ncmpcpp
super + shift + a
	$TERMINAL -e pulsemixer
super + s
	$TERMINAL -e spotify_tui

#XF86
XF86MonBrightnessDown
	xbacklight -dec 15
XF86MonBrightnessUp
	xbacklight -inc 15
super + control + alt + q
    prompt 'Do you want to shutdown?' 'systemctl poweroff'
XF86AudioMute
	pactl set-sink-mute 0 toggle
XF86AudioRaiseVolume
	pactl set-sink-mute 0 false ; pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
	pactl set-sink-mute 0 false ; pactl set-sink-volume 0 -5%

#Scripts
super + control + alt + u
	dmenuunicode
super + control + alt + p
	$TERMINAL -e pass open -f
super + control + alt + shift + p
	$TERMINAL -e pass close
super + F7
	dmenumount
super + F8
	dmenuumount
