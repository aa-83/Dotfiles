" vim: filetype=vifm

set vicmd=$EDITOR
set dotfiles
set syscalls
set nofollowlinks
set sortnumbers
set sortorder
set undolevels=100
set wildmenu
set wildstyle=popup
set scrolloff=4
set ignorecase
set smartcase
set nohlsearch
set incsearch
set number relativenumber
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
colorscheme eirik

map <C-h> <C-w>h
map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
map <C-o> <C-w>o
map <C-s> <C-w>s
map <C-v> <C-w>v

map R :restart<CR>
map x :!sxiv -ft * 2>/dev/null &<CR>
map E :!$EDITOR %f<CR>
map mkd :mkdir<space>
map bg :!wallpaper %f &<CR>
map fr :!fr<CR>
map -x :!chmod -x *.pdf<CR>
map X :!ext %f &<CR>

nnoremap s :shell<cr>
"nnoremap w :view<cr>
"vnoremap w :view<cr>gv
nnoremap o :file &<cr>
nnoremap yd :!echo %d | xclip %i<cr>
nnoremap yf :!echo %c:p | xclip %i<cr>
nnoremap I cw<c-a>
nnoremap cc cw<c-u>
nnoremap A cw
nnoremap ,w :set wrap!<cr>
nmap <space> tj
nmap q ZQ

" Directory shortcuts
nnoremap gh :cd ~/<CR>
nnoremap gt :cd ~/dokumenter<CR>
nnoremap gd :cd ~/dokumenter<CR>
nnoremap gma :cd ~/dokumenter/man<CR>
nnoremap goF :cd ~/dokumenter/build/oF<CR>
